<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookshelf" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="toolbarStyle">@style/MyToolBar</item>
    </style>

    <!--- ActionBar Style -->
    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextColor">@color/black_700</item>
        <item name="android:colorPrimary">@color/black_700</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorControlNormal">@color/black_700</item>
    </style>

    <style name="MyButon" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@color/black_700</item>
        <item name="android:background">@drawable/rounded_corners_8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>


    <style name="MyTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MySubtitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_700</item>
    </style>

</resources>